<?xml version="1.0" encoding="utf-8"?>



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:orientation="vertical"
    android:background="@drawable/bg4"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="437sp"
        android:layout_height="wrap_content"
        android:padding="30sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_login"
            android:layout_marginRight="-56sp"
            android:layout_marginBottom="-21sp"
            android:layout_toLeftOf="@+id/btn_login"
            android:text="Hi Smriti" />

        <ImageButton
            android:id="@+id/btn_login"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25sp"
            android:background="@drawable/shubh" />



        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            android:layout_marginTop="100sp"
            android:layout_marginRight="25sp"
            android:background="@color/white"
            android:hint="  hey! lookup for your favourite song here">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="2sp"
            android:fontFamily="sans-serif-black"
            android:text="VIBEZZ"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="welcome to,"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210sp">


            <ImageView
                android:id="@+id/kasoor"
                android:layout_width="125sp"
                android:layout_height="125sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="45sp"
                android:background="@drawable/kasoor" />

            <ImageView
                android:id="@+id/saansein"
                android:layout_width="125sp"
                android:layout_height="125sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="45sp"
                android:layout_toRightOf="@+id/kasoor"
                android:background="@drawable/saansein" />

            <ImageView
                android:id="@+id/colors"
                android:layout_width="125sp"
                android:layout_height="125sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="45sp"
                android:layout_toRightOf="@+id/saansein"
                android:background="@drawable/colors" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:text=" Recently Played"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kasoor"
                android:layout_alignLeft="@+id/kasoor"
                android:text="Kasoor- \nPrateek Kuhad"
                android:textStyle="bold" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/saansein"
                android:layout_alignLeft="@+id/saansein"
                android:text="Saansein- \nPrateek Kuhad"
                android:textStyle="bold" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/colors"
                android:layout_alignLeft="@+id/colors"
                android:text="Colors- \nStella Jang"
                android:textStyle="bold" />



        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210sp">


            <ImageView
                android:id="@+id/ts"
                android:layout_width="125sp"
                android:layout_height="125sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="45sp"
                android:background="@drawable/taylorswift" />

            <ImageView
                android:id="@+id/lauv"
                android:layout_width="125sp"
                android:layout_height="125sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="45sp"
                android:layout_toRightOf="@+id/ts"
                android:background="@drawable/lauv" />

            <ImageView
                android:id="@+id/sm"
                android:layout_width="125sp"
                android:layout_height="125sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="45sp"
                android:layout_toRightOf="@+id/lauv"
                android:background="@drawable/shawn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:text=" Jump Back To"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ts"
                android:layout_alignLeft="@+id/ts"
                android:text="Taylor Swift"
                android:textStyle="bold" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/lauv"
                android:layout_alignLeft="@+id/lauv"
                android:text="Lauv"
                android:textStyle="bold" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/sm"
                android:layout_alignLeft="@+id/sm"
                android:text="Shawn Mendes"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72sp"
        android:background="@color/white"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/charlie"
            android:layout_width="75sp"
            android:layout_height="match_parent"
            android:background="@drawable/charlie"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/charlie"
            android:layout_marginLeft="10sp"
            android:layout_centerVertical="true"
            android:text=" Empty cups | Charlie Puth "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="15sp"
            android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currently Playing"
                android:layout_marginLeft="90sp"
                android:layout_marginTop="7sp"></TextView>
            <ImageButton
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="10sp"
                android:background="@drawable/playbutton"/>

        </RelativeLayout>

    </LinearLayout>





<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <Button
        android:id="@+id/home"
        android:layout_width="130sp"
        android:layout_height="match_parent"
        android:text="Home" />

    <Button
        android:layout_width="130sp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10sp"
        android:text="LIBRARY"/>

        <Button
            android:layout_width="130sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:text="explore"/>



    </LinearLayout>

</LinearLayout>


</ScrollView>
